# Development Dockerfile with hot reload
FROM node:24-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3030

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
